---
interface Props {
  href: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { 
  href, 
  variant = 'primary', 
  size = 'md',
  class: className = '',
} = Astro.props;

const variants = {
  primary: 'bg-primary-700 hover:bg-primary-800 text-white shadow-sm',
  secondary: 'bg-secondary-700 hover:bg-secondary-800 text-white shadow-sm',
  outline: 'border border-primary-700 text-primary-700 hover:text-primary-800 hover:border-primary-800',
};

const sizes = {
  sm: 'px-3 py-2 text-sm',
  md: 'px-4 py-2.5 text-sm',
  lg: 'px-6 py-3 text-base',
};
---

<a
  href={href}
  class:list={[
    'inline-flex items-center justify-center font-medium rounded-md transition-colors duration-200',
    variants[variant],
    sizes[size],
    className
  ]}
>
  <slot />
</a>