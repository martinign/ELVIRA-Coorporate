---
import Button from './Button.astro';

const benefits = [
  {
    title: 'No IT Resources Required',
    i18nTitleKey: 'forHotels.benefitsList.noIT.title',
    description: 'A plug-and-play concierge system with no need for internal development or technical expertise.',
    i18nDescKey: 'forHotels.benefitsList.noIT.description',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 0 1-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0 1 15 18.257V17.25m6-12V15a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 15V5.25m18 0A2.25 2.25 0 0 0 18.75 3H5.25A2.25 2.25 0 0 0 3 5.25m18 0V12a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 12V5.25" />
          </svg>`
  },
  {
    title: 'Increased Revenue',
    i18nTitleKey: 'forHotels.benefitsList.revenue.title',
    description: 'Boost sales from in-app purchases, room service orders, and excursion bookings with easy digital access.',
    i18nDescKey: 'forHotels.benefitsList.revenue.description',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z" />
          </svg>`
  },
  {
    title: 'Improved Guest Satisfaction',
    i18nTitleKey: 'forHotels.benefitsList.satisfaction.title',
    description: 'Enhance the guest experience with convenient digital access to all hotel services and amenities.',
    i18nDescKey: 'forHotels.benefitsList.satisfaction.description',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.182 15.182a4.5 4.5 0 0 1-6.364 0M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0ZM9.75 9.75c0 .414-.168.75-.375.75S9 10.164 9 9.75 9.168 9 9.375 9s.375.336.375.75Zm-.375 0h.008v.015h-.008V9.75Zm5.625 0c0 .414-.168.75-.375.75s-.375-.336-.375-.75.168-.75.375-.75.375.336.375.75Zm-.375 0h.008v.015h-.008V9.75Z" />
          </svg>`
  },
  {
    title: 'Fully Customizable',
    i18nTitleKey: 'forHotels.benefitsList.customizable.title',
    description: "Tailor the platform to match your hotel's branding and specific service offerings.",
    i18nDescKey: 'forHotels.benefitsList.customizable.description',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.53 16.122a3 3 0 0 0-5.78 1.128 2.25 2.25 0 0 1-2.4 2.245 4.5 4.5 0 0 0 8.4-2.245c0-.399-.078-.78-.22-1.128Zm0 0a15.998 15.998 0 0 0 3.388-1.62m-5.043-.025a15.994 15.994 0 0 1 1.622-3.395m3.42 3.42a15.995 15.995 0 0 0 4.764-4.648l3.876-5.814a1.151 1.151 0 0 0-1.597-1.597L14.146 6.32a15.996 15.996 0 0 0-4.649 4.763m3.42 3.42a6.776 6.776 0 0 0-3.42-3.42" />
          </svg>`
  },
  {
    title: 'Multilingual Support',
    i18nTitleKey: 'forHotels.benefitsList.multilingual.title',
    description: 'Break language barriers and serve international guests with real-time translation capabilities.',
    i18nDescKey: 'forHotels.benefitsList.multilingual.description',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m10.5 21 5.25-11.25L21 21m-9-3h7.5M3 5.621a48.474 48.474 0 0 1 6-.371m0 0c1.12 0 2.233.038 3.334.114M9 5.25V3m3.334 2.364C11.176 10.658 7.69 15.08 3 17.502m9.334-12.138c.896.061 1.785.147 2.666.257m-4.589 8.495a18.023 18.023 0 0 1-3.827-5.802" />
          </svg>`
  },
  {
    title: 'Privacy Focus',
    i18nTitleKey: 'forHotels.benefitsList.privacy.title',
    description: 'Our system requires no personal guest data, maintaining privacy while providing personalized service.',
    i18nDescKey: 'forHotels.benefitsList.privacy.description',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z" />
          </svg>`
  }
];
---

<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl" data-i18n="forHotels.benefits.title">
        Benefits for Independent Hotels
      </h2>
      <p class="mt-4 max-w-2xl mx-auto text-lg text-gray-600" data-i18n="forHotels.benefits.subtitle">
        Designed specifically for boutique and independent hotels that want to provide premium digital experiences without extensive IT resources.
      </p>
    </div>

    <div class="mt-16">
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {benefits.map(benefit => (
          <div class="relative p-6 bg-gray-50 rounded-lg border border-gray-100 hover:shadow-md transition-shadow duration-300">
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0 inline-flex items-center justify-center h-10 w-10 rounded-md bg-primary-100 text-primary-700">
                <Fragment set:html={benefit.icon} />
              </div>
              <h3 class="text-lg font-medium text-gray-900" data-i18n={benefit.i18nTitleKey}>{benefit.title}</h3>
            </div>
            <p class="mt-4 text-base text-gray-600" data-i18n={benefit.i18nDescKey}>{benefit.description}</p>
          </div>
        ))}
      </div>
      
      <div class="mt-16 text-center">
        <Button href="/contact" variant="primary" size="lg">
          <span data-i18n="forHotels.cta">Schedule a Consultation</span>
        </Button>
      </div>
    </div>
  </div>
</section>