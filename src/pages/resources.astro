---

<Layout 
  title="Resources - Comcierge Digital Concierge Platform" 
  description="Explore Comcierge's resources including blog posts, case studies, documentation, and webinars about our digital concierge platform."
>
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl" data-i18n="resources.title">
          Resources
        </h1>
        <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-600" data-i18n="resources.subtitle">
          Discover insights, guides, and success stories to help you get the most from your digital concierge platform.
        </p>
      </div>
      
      <div class="mt-16">
        {resources.map((resourceCategory) => (
          <div class="mb-16">
            <h2 class="text-2xl font-bold text-gray-900 mb-8" data-i18n={resourceCategory.i18nCategoryKey}>{resourceCategory.category}</h2>
            
            {resourceCategory.category === 'Blog' && (
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {resourceCategory.items.map((item) => (
                  <div class="bg-white rounded-lg shadow-md overflow-hidden transition-shadow duration-300 hover:shadow-lg">
                    <img src={item.image} alt={item.title} class="w-full h-48 object-cover" data-i18n-alt={item.i18nTitleKey} />
                    <div class="p-6">
                      <p class="text-sm text-primary-700" data-i18n={item.i18nDateKey}>{item.date}</p>
                      <h3 class="mt-2 text-xl font-semibold text-gray-900">
                        <a href={item.url} class="hover:text-primary-700" data-i18n={item.i18nTitleKey}>{item.title}</a>
                      </h3>
                      <p class="mt-3 text-base text-gray-600" data-i18n={item.i18nDescKey}>{item.description}</p>
                      <div class="mt-4">
                        <a href={item.url} class="text-primary-700 hover:text-primary-800 font-medium">
                          <span data-i18n="resources.actions.readArticle">Read Article</span> â†’
                        </a>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            )}
            
            {resourceCategory.category === 'Case Studies' && (
              <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {resourceCategory.items.map((item) => (
                  <div class="bg-white rounded-lg shadow-md overflow-hidden transition-shadow duration-300 hover:shadow-lg">
                    <div class="md:flex">
                      <div class="md:flex-shrink-0">
                        <img src={item.image} alt={item.title} class="h-48 w-full md:w-48 object-cover" data-i18n-alt={item.i18nTitleKey} />
                      </div>
                      <div class="p-6">
                        <p class="text-sm text-primary-700" data-i18n={item.i18nLocationKey}>{item.location}</p>
                        <h3 class="mt-2 text-xl font-semibold text-gray-900">
                          <a href={item.url} class="hover:text-primary-700" data-i18n={item.i18nTitleKey}>{item.title}</a>
                        </h3>
                        <p class="mt-3 text-base text-gray-600" data-i18n={item.i18nDescKey}>{item.description}</p>
                        <div class="mt-4">
                          <a href={item.url} class="text-primary-700 hover:text-primary-800 font-medium">
                            <span data-i18n="resources.actions.viewCaseStudy">View Case Study</span> â†’
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            )}
            
            {resourceCategory.category === 'Documentation' && (
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {resourceCategory.items.map((item) => (
                  <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-300">
                    <div class="flex items-center justify-center h-12 w-12 rounded-md bg-primary-100 text-primary-700 mb-4">
                      <Fragment set:html={item.icon} />
                    </div>
                    <h3 class="text-lg font-medium text-gray-900" data-i18n={item.i18nTitleKey}>{item.title}</h3>
                    <p class="mt-2 text-sm text-primary-700" data-i18n={item.i18nTypeKey}>{item.type}</p>
                    <p class="mt-3 text-base text-gray-600" data-i18n={item.i18nDescKey}>{item.description}</p>
                    <div class="mt-4">
                      <a href={item.url} class="text-primary-700 hover:text-primary-800 font-medium">
                        <span data-i18n="resources.actions.accessDocument">Access Document</span> â†’
                      </a>
                    </div>
                  </div>
                ))}
              </div>
            )}
            
            {resourceCategory.category === 'Videos & Webinars' && (
              <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {resourceCategory.items.map((item) => (
                  <div class="bg-white rounded-lg shadow-md overflow-hidden transition-shadow duration-300 hover:shadow-lg">
                    <div class="relative">
                      <img src={item.thumbnail} alt={item.title} class="w-full h-64 object-cover" data-i18n-alt={item.i18nTitleKey} />
                      <div class="absolute inset-0 flex items-center justify-center">
                        <div class="bg-white bg-opacity-80 rounded-full p-3">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                        </div>
                      </div>
                    </div>
                    <div class="p-6">
                      <p class="text-sm text-primary-700" data-i18n={item.i18nDurationKey}>{item.duration}</p>
                      <h3 class="mt-2 text-xl font-semibold text-gray-900">
                        <a href={item.url} class="hover:text-primary-700" data-i18n={item.i18nTitleKey}>{item.title}</a>
                      </h3>
                      <p class="mt-3 text-base text-gray-600" data-i18n={item.i18nDescKey}>{item.description}</p>
                      <div class="mt-4">
                        <a href={item.url} class="text-primary-700 hover:text-primary-800 font-medium">
                          <span data-i18n="resources.actions.watchVideo">Watch Video</span> â†’
                        </a>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            )}
            
            <div class="mt-8 text-center">
              <Button href={`/${resourceCategory.category.toLowerCase().replace(' & ', '-')}`} variant="outline">
                <span data-i18n="resources.viewAll">View All</span> {resourceCategory.category}
              </Button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>