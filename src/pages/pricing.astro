---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import CTA from '../components/CTA.astro';

const pricingTiers = [
  { id: 'starter', popular: false, featuresCount: 7 },
  { id: 'professional', popular: true, featuresCount: 8 },
  { id: 'enterprise', popular: false, featuresCount: 8 }
];

const faqCount = 6;
---

<Layout 
  title="E · L · V · I · R · A - Pricing" 
  description="Explore Elvira's flexible pricing plans for independent hotels of all sizes."
>
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl" data-i18n="pricing.title"></h1>
        <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-600" data-i18n="pricing.subtitle"></p>
      </div>

      <!-- Pricing Tiers -->
      <div class="mt-16 grid grid-cols-1 gap-8 lg:grid-cols-3">
        {pricingTiers.map(tier => (
          <div class={`bg-white rounded-lg overflow-hidden ${tier.popular ? 'shadow-xl border-2 border-primary-500 relative' : 'shadow-sm border border-gray-200'}`}>
            {tier.popular && (
              <div class="absolute top-0 right-0 -mt-2 -mr-2 bg-primary-500 text-white px-4 py-1 rounded-full text-sm font-medium" data-i18n="pricing.tiers.professional.popular"></div>
            )}
            <div class={`p-6 border-b border-gray-200 ${tier.popular ? 'bg-primary-50' : 'bg-gray-50'}`}>
              <h3 class="text-lg font-medium text-gray-900" data-i18n={`pricing.tiers.${tier.id}.name`}></h3>
              <p class="mt-4 text-3xl font-bold text-gray-900">
                <span data-i18n={`pricing.tiers.${tier.id}.price`}></span>
                <span class="text-lg font-medium text-gray-500" data-i18n={`pricing.tiers.${tier.id}.period`}></span>
              </p>
              <p class="mt-1 text-sm text-gray-600" data-i18n={`pricing.tiers.${tier.id}.description`}></p>
            </div>
            <div class="p-6">
              <ul class="space-y-4">
                {Array.from({ length: tier.featuresCount }).map((_, i) => (
                  <li class="flex items-start">
                    <svg class="h-6 w-6 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="ml-3 text-base text-gray-600" data-i18n={`pricing.tiers.${tier.id}.features.${i}`}></span>
                  </li>
                ))}
              </ul>
              <div class="mt-8">
                <Button 
                  href="/contact" 
                  variant={tier.popular ? 'primary' : 'outline'} 
                  class="w-full justify-center"
                >
                  <span data-i18n={`pricing.tiers.${tier.id}.cta`}></span>
                </Button>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- FAQ Section -->
      <div class="mt-16 bg-gray-50 rounded-lg p-8">
        <div class="text-center mb-8">
          <h2 class="text-2xl font-bold text-gray-900" data-i18n="pricing.faq.title"></h2>
          <p class="mt-2 text-gray-600" data-i18n="pricing.faq.subtitle"></p>
        </div>

        <div class="space-y-8">
          {Array.from({ length: faqCount }).map((_, i) => (
            <div>
              <h3 class="text-lg font-medium text-gray-900" data-i18n={`pricing.faq.items.${i}.question`}></h3>
              <p class="mt-2 text-gray-600" data-i18n={`pricing.faq.items.${i}.answer`}></p>
            </div>
          ))}
        </div>

        <div class="mt-8 text-center">
          <p class="text-gray-600">
            <span data-i18n="pricing.faq.contact"></span>
            <a href="mailto:sales@comcierge.com" class="text-primary-700 font-medium" data-i18n="pricing.faq.email"></a>
          </p>
        </div>
      </div>
    </div>
  </section>

  <CTA />
</Layout>
